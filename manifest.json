{
  "manifest_version": 3,
  "name": "ZenMode",
  "version": "1.0",
  "description": "Customizable UI toggles for YouTube and other sites.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "core/content.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "sites/youtube/main.js"
      ],
      "css": [
        "sites/youtube/styles.css"
      ],
      "run_at": "document_start"
    }
  ]
}
