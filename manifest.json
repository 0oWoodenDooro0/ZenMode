{
  "manifest_version": 3,
  "name": "ZenMode",
  "version": "1.0",
  "description": "Customizable UI toggles for YouTube and other sites.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "zenmode@woodendoor.website",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ],
        "optional": []
      }
    }
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "512": "icons/icon512.png"
    }
  },
  "icons": {
    "512": "icons/icon512.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "core/content.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "sites/youtube/main.js"
      ],
      "css": [
        "sites/youtube/styles.css"
      ],
      "run_at": "document_start"
    }
  ]
}
